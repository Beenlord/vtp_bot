{
	"imports": {
		"@/": "./",
		"@core/": "./core/",
		"@module/": "./modules/"
	},
	"tasks": {
		"dev": "deno run --allow-env --allow-read --allow-net --watch main.ts",
		"build": "deno compile --allow-env --allow-read --allow-net --output .build/run --target x86_64-unknown-linux-gnu main.ts",
		"fmt": "deno fmt --watch"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 2,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve"
	}
}
